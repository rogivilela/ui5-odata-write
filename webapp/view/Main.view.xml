<mvc:View controllerName="ovly.odatawrite.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">
    <Shell id="shell">
        <SplitApp id="app">
            <masterPages>
                <Page id="page"
                    title="Produtos">

                    <subHeader>
                        <Toolbar>
                            <SearchField liveChange="onLiveChange"/>
                        </Toolbar>
                    </subHeader>

                    <content>

                        <List id="list"
                            items="{
                                path: '/Products',
                                suspended: false
                            }"
                            growing="true"
                            growingScrollToLoad="true"
                            growingThreshold="40"
                            itemPress="onItemPress">

                            <items>
                                <ObjectListItem type="Navigation"
                                    intro="{Id}"
                                    title="{Name}"
                                    icon="{ImageUrl}"
                                    number="{Price}"
                                    numberUnit="{CurrencyCode}">
                                    <attributes>
                                        <ObjectAttribute title="Peso"
                                            text="{WeightMeasure} {WeightUnit}"/>
                                        <ObjectAttribute title="Categoria"
                                            text="{MainCategoryName}"/>
                                    </attributes>
                                    <markers>
                                        <ObjectMarker type="Favorite"
                                            visible="{IsFavoriteOfCurrentUser}">
                                        </ObjectMarker>
                                    </markers>
                                </ObjectListItem>
                            </items>
                        </List>


                    </content>
                </Page>
            </masterPages>
            <detailPages>
                <Page id="page-detail"
                    title="Detalhes">
                    <content>
                        <ObjectHeader id="header"
                        intro="{Id}"
                            title="{Name}"
                            icon="{ImageUrl}"
                            number="{Price}"
                            numberUnit="{CurrencyCode}">
                            <attributes>
                                <ObjectAttribute title="Peso"
                                    text="{WeightMeasure} {WeightUnit}"/>
                                <ObjectAttribute title="Categoria"
                                    text="{MainCategoryName}"/>
                            </attributes>
                            <markers>
                                <ObjectMarker type="Favorite"
                                    visible="{IsFavoriteOfCurrentUser}">
                                </ObjectMarker>
                            </markers>
                        </ObjectHeader>
                        <Table items="{ReviewAggregates}">
                            <columns>
                                 <!-- <Column>
                                    <header>
                                        <Label text="Produto" />
                                    </header>
                                </Column>  -->
                                <Column>
                                    <header>
                                        <Label text="Nota"/>
                                    </header>
                                </Column>
                                <Column>
                                    <header>
                                        <Label text="Quantidade"/>
                                    </header>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <!-- <Text text="{ProductId}" /> -->
                                        <RatingIndicator value="{Rating}"/>
                                        <ObjectNumber number="{RatingCount}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                        <VBox>
                            <items>
                                <RatingIndicator id="rating" />
                                <TextArea id="comment"/>
                                <Button icon="sap-icon://save" press="onSubmitReview"/>
                            </items>
                        </VBox>
                    </content>
                    <footer>
                        <Toolbar>
                            <content>
                                <ToolbarSpacer/>
                                <ToggleButton press="onFavorite" icon="sap-icon://favorite" />
                            </content>
                        </Toolbar>
                    </footer>
                </Page>
            </detailPages>
        </SplitApp>
    </Shell>
</mvc:View>
